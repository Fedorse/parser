{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "parser",
  "version": "1.0.0",
  "identifier": "com.parser.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "parser",
        "width": 1024,
        "height": 720,
        "minWidth": 800,
        "minHeight": 700,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,

        "decorations": true,
        "transparent": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  }
}
