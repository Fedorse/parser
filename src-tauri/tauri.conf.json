{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "codebase-parser",
  "version": "1.0.0",
  "identifier": "com.parser.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Parser",
        "width": 1024,
        "height": 720,
        "resizable": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "decorations": true,
        "zoomHotkeysEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  }
}
